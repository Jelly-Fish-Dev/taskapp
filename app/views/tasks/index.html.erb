<h1>Tasks</h1>

<% @tasks.each do |task| %>
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Due date:</strong>
    <%= task.due_date %>
  </p>

  <p>
    <strong>Assignee:</strong>
    <%= task.account.email %>
  </p>
<% end %>